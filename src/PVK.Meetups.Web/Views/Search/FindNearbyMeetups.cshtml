@model FindMeetupsResultModel


<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content">

                
                @if (Model.Results == null || Model.Results.Count < 1)
                {
                    <p>
                        No groups or events match the search criteria.
                    </p>
                    <div class="hr-line-dashed"></div>
                }


                @foreach (var result in Model.Results)
                {
                    <div class="hr-line-dashed"></div>
                    if (result.EventId == null)
                    {
                        <div class="search-result">
                            @Html.ActionLink(result.Name, "Details", "MeetupGroupsController", new {Id = result.GroupId})
                            <p>
                                @result.Description
                            </p>
                        </div>
                    }
                    else
                    {
                        <div class="search-result">
                            @Html.ActionLink(result.Name, "Details", "MeetupGroupEventsController", new {Id = result.EventId.Value})
                            <p>
                                @result.Description
                            </p>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
